<div class = "calculation">
<h1>  Balance: <%= Calculation.total-Calculation.dept  %></h1>
<h1>  Dept: <%= Calculation.dept %></h1>
<h1>  Total: <%=  Calculation.total  %></h1>
</div>

<table class="table table-hover" align="center">
    
  <thead>
    <tr>
      <th>Date</th>
      <th>Title</th>
      <th>Amount</th>
    </tr>
  </thead>
  <% @accounts.each do |account| %>
  <tbody>
    <tr>
     <th><%= account.datetime %></th>
      <th><%= account.title %></th>
      <th><%= account.amount %></th>
      <th> <%= link_to 'Delete', calculation_path(account), method: :delete, class: 'btn btn-sm btn-danger', data: {confirm: "Are you sure?"}  %>
      </th>
      <th> <%= link_to 'Edit', edit_calculation_path(account), class: 'btn btn-success' %></th>
    </tr>
    
  </tbody>
  <% end %>
</table>

